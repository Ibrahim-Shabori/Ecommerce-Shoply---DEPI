@model ProductVM

<div class="my-4 border-0 card shadow">
	<div class="card-header bg-secondary bg-gradient ml-0 py-3">
		<div class="row">
			<div class="col-12 text-center">
				<h2 class="text-white py-2">@(Model.Product.Id != 0?"Update":"Create") Product</h2>
			</div>
		</div>
	</div>
	<div class="card-body p-4">
		<form method="post" class="row" enctype="multipart/form-data">
			<div class="row">
				<div class="col-10">
					<div class="border p-3">

						<div asp-validation-summary="All"></div>
						<input type="hidden" asp-for="Product.Id" />
						<input type="hidden" asp-for="Product.ImageUrl" />

						<div class="form-floating py-2 col-12">
							<input asp-for="Product.ISBN" class="form-control border-0 shadow" placeholder="ISBN Number" />
							<label asp-for="Product.ISBN" class="ms-2">ISBN</label>
						</div>
						<div class="form-floating py-2 col-12">
							<input asp-for="Product.Title" class="form-control border-0 shadow" placeholder="Product Name" />
							<label asp-for="Product.Title" class="ms-2">Product Title</label>
						</div>

						<div class="py-2 col-12">
							<label asp-for="Product.Description" class="ms-2 text-muted">Description</label>
							<textarea asp-for="Product.Description" class="form-control border-0 shadow"></textarea>
						</div>
						<div class="form-floating py-2 col-12">
							<input asp-for="Product.Price" class="form-control border-0 shadow" placeholder="Product Price" />
							<label asp-for="Product.Price" class="ms-2">Price</label>
						</div>
						<div class="form-floating py-2 col-12">
							<input asp-for="Product.Author" class="form-control border-0 shadow" placeholder="Author Name" />
							<label asp-for="Product.Author" class="ms-2">Author Name</label>
						</div>
						<div class="form-floating py-2 col-12">
							<input asp-for="Product.Price50" class="form-control border-0 shadow" placeholder="Price for +50 copies" />
							<label asp-for="Product.Price50" class="ms-2">Price for +50 copies</label>
						</div>
						<div class="form-floating py-2 col-12">
							<input asp-for="Product.Price100" class="form-control border-0 shadow" placeholder="Price for +100 copies" />
							<label asp-for="Product.Price100" class="ms-2">Price for +100 copies</label>
						</div>
						<div class="form-floating py-2 col-12">
							<input asp-for="Product.ListPrice" class="form-control border-0 shadow" placeholder="List Price" />
							<label asp-for="Product.ListPrice" class="ms-2">List Price</label>
						</div>

						<div class="form-floating py-2 col-12">
							<select asp-for="Product.CategoryId" asp-items="@Model.CategoryList" class="form-select border-0 shadow">
								<option selected disabled>--Select Category--</option>
							</select>
							<label asp-for="Product.ListPrice" class="ms-2">Category</label>
						</div>

						<div class="form-floating py-2 col-12">
							<input type="file" name="formFile" class="form-control border-0 shadow" placeholder="List Price" />
							<label asp-for="Product.ImageUrl" class="ms-2"></label>
						</div>


						<div class="row justify-content-center pt-2">
							<div class="col-6 col-md-3">
								@if (Model.Product.Id != 0)
								{
									<button type="submit" class="btn btn-outline-primary form-control">
										Update Product
									</button>
								}
								else
								{
									<button type="submit" class="btn btn-outline-primary form-control">
										Create Product
									</button>
								}
							</div>

							<div class="col-6 col-md-3">
								<a class="btn btn-outline-primary form-control " asp-controller="Product" asp-action="Index">
									Back To List
								</a>
							</div>
						</div>

					</div>
				</div>
				<div class="col-2">
					<img src="@Model.Product.ImageUrl" alt="Book Picture" width="100%"
					 style="border-radius: 5px; border: 1px solid #bbb9b9"/>
				</div>
			</div>
			

		</form>
	</div>
</div>



@section Scripts{
	<script>
		tinymce.init({
		  selector: 'textarea',
		  plugins: [
			// Core editing features
			'anchor', 'autolink', 'charmap', 'codesample', 'emoticons', 'image', 'link', 'lists', 'media', 'searchreplace', 'table', 'visualblocks', 'wordcount',
			// Your account includes a free trial of TinyMCE premium features
			// Try the most popular premium features until Apr 30, 2025:
			'checklist', 'mediaembed', 'casechange', 'formatpainter', 'pageembed', 'a11ychecker', 'tinymcespellchecker', 'permanentpen', 'powerpaste', 'advtable', 'advcode', 'editimage', 'advtemplate', 'ai', 'mentions', 'tinycomments', 'tableofcontents', 'footnotes', 'mergetags', 'autocorrect', 'typography', 'inlinecss', 'markdown','importword', 'exportword', 'exportpdf'
		  ],
		  toolbar: 'undo redo | blocks fontfamily fontsize | bold italic underline strikethrough | link image media table mergetags | addcomment showcomments | spellcheckdialog a11ycheck typography | align lineheight | checklist numlist bullist indent outdent | emoticons charmap | removeformat',
		  tinycomments_mode: 'embedded',
		  tinycomments_author: 'Author name',
		  mergetags_list: [
			{ value: 'First.Name', title: 'First Name' },
			{ value: 'Email', title: 'Email' },
		  ],
		  ai_request: (request, respondWith) => respondWith.string(() => Promise.reject('See docs to implement AI Assistant')),
		});
	</script>
	@{
		<partial name="_ValidationScriptsPartial" />
	}
}