@model List<Category>

@{
    ViewData["Title"] = "Index";
}

<div class="mt-4 border-0 card shadow">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Category List</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="row pb-3">
            <div class="col-6">
            </div>

            <div class="col-6 text-end">
                <a class="btn btn-primary" asp-controller="Category" asp-action="Create">
                    <i class="bi bi-plus-circle"></i> Add New Category
                </a>
            </div>
        </div>

        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Description</th>
                    <th></th>
                </tr>
            </thead>

            <tbody>
                @foreach (var category in Model)
                {
                    <tr>
                        <td>
                            @category.Name
                        </td>
                        <td>
                            @category.Description
                        </td>
                        <td>
                            <div class="btn-group w-75 justify-content-center" role="group">
                                <a class="btn btn-outline-primary mx-2" asp-controller="Category" asp-action="Edit" asp-route-id="@category.Id">
                                    <i class="bi bi-pencil-square"></i> Edit
                                </a>

                                <a class="btn btn-outline-danger mx-2" asp-controller="Category" asp-action="Delete" asp-route-id="@category.Id">
                                    <i class="bi bi-trash"></i> Delete
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<div class="container">

    

</div>

