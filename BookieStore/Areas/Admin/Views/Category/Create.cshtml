@model Category

<div class="mt-4 border-0 card shadow">
	<div class="card-header bg-secondary bg-gradient ml-0 py-3">
		<div class="row">
			<div class="col-12 text-center">
				<h2 class="text-white py-2">Create Category</h2>
			</div>
		</div>
	</div>
	<div class="card-body p-4">
		<form method="post" class="row">
			<div class="border p-3">

				<div asp-validation-summary="All"></div>

				<div class="form-floating py-2 col-12">
					<input asp-for="Name" class="form-control border-0 shadow" placeholder="Category Name" />
					<label asp-for="Name" class="ms-2">Category Name</label>
				</div>

				<div class="form-floating py-2 col-12">				
					<input asp-for="Description" class="form-control border-0 shadow" placeholder="Category Description" />
					<label asp-for="Description" class="ms-2">Description</label>
				</div>

				<div class="row justify-content-center pt-2">
					<div class="col-6 col-md-3">
						<button type="submit" class="btn btn-outline-primary form-control">
							Add Category
						</button>
					</div>

					<div class="col-6 col-md-3">
						<a class="btn btn-outline-primary form-control " asp-controller="Category" asp-action="Index">
							Back To List
						</a>
					</div>
				</div>

			</div>

		</form>
	</div>
</div>



@section Scripts{
	@{
		<partial name="_ValidationScriptsPartial" />
	}
}